{
  "name": "node-react-mono-repo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:frontend": "turbo run dev --filter=@repo/frontend",
    "build:frontend": "turbo run build --filter=@repo/frontend",
    "dev:backend": "turbo run dev --filter=@repo/backend",
    "build:backend": "turbo run build --filter=@repo/backend",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "docs:sync-index": "node scripts/sync-persistent-docs.js",
    "clean:node-modules": "node scripts/clean-node-modules.js"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "js-yaml": "^4.1.1",
    "prettier": "^3.6.2",
    "turbo": "^2.6.2",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
